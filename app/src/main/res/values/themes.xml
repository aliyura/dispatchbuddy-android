<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DispatchBuddy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
<!--  Splashscreen theme  -->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen_image</item>
        <item name="android:statusBarColor">@color/primary_color</item>
    </style>
    <style name="DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/secondary_color</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="EditTextInputLayout">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">@dimen/width_0dp</item>
        <item name="boxStrokeWidthFocused">@dimen/width_0dp</item>
        <item name="hintAnimationEnabled">false</item>
    </style>
    <style name="EditTextInput">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:padding">@dimen/padding_12dp</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>
</resources>