<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="@dimen/elevation_5dp"
    android:layout_marginHorizontal="@dimen/margin_10dp"
    android:background="@drawable/success_dialog_bg"
    tools:context=".presentation.ui.user_dashboard.SuccessDialogFragment">

    <ImageView
        android:id="@+id/success_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_success"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_top" />

    <TextView
        android:id="@+id/success_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/success"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size_18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/success_iv"
        app:layout_constraintStart_toStartOf="@+id/success_iv"
        app:layout_constraintTop_toBottomOf="@+id/success_iv" />

    <TextView
        android:id="@+id/success_message_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:fontFamily="@font/inter_bold"
        tools:text="@string/success_message"
        android:layout_marginHorizontal="@dimen/margin_24dp"
        android:textColor="@color/textColor"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/success_tv" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="60dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7547771" />

</androidx.constraintlayout.widget.ConstraintLayout>