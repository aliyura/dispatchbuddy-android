<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_color"
    tools:context=".presentation.ui.profile.view.EditProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_edit_profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        app:elevation="@dimen/elevation_4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/fragment_login_backArrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button"
            tools:ignore="ContentDescription"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:fontFamily="@font/inter_bold"
            android:textSize="@dimen/text_size_16sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/accent_variant_color"
            />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_edit_profile_toolbar"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/padding_16dp"
                android:paddingVertical="@dimen/padding_32dp"
                android:layout_marginTop="@dimen/margin_16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/full_name"
                    android:fontFamily="@font/inter"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/accent_color"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/EditTextInputLayout"
                    android:layout_width="match_parent"
                    android:id="@+id/fragment_edit_full_name_layout"
                    android:layout_height="wrap_content"
                    app:endIconMode="clear_text"
                    android:layout_marginTop="@dimen/margin_8dp"
                    app:hintTextColor="@color/hint_text_color"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextInput"
                        android:id="@+id/fragment_edit_full_name_edt"
                        android:layout_width="match_parent"
                        android:inputType="textCapWords"
                        android:layout_height="@dimen/height_48dp"
                        android:hint="@string/enter_your_full_name"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/country"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:fontFamily="@font/inter"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/accent_color"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/EditTextInputLayout"
                    android:id="@+id/fragment_edit_country_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    app:hintTextColor="@color/hint_text_color"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextInput"
                        android:id="@+id/fragment_edit_country_edt"
                        android:inputType="textCapWords"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_48dp"
                        android:hint="@string/enter_your_country"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:fontFamily="@font/inter"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/accent_color"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/EditTextInputLayout"
                    android:id="@+id/fragment_edit_city_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    app:hintTextColor="@color/hint_text_color"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextInput"
                        android:id="@+id/fragment_edit_city_edt"
                        android:inputType="textCapWords"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_48dp"
                        android:hint="@string/enter_your_city_name"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:fontFamily="@font/inter"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/accent_color"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="@dimen/width_120dp"
                    android:id="@+id/selectGenderDropdownLayout"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="1dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color"
                    >
                    <AutoCompleteTextView
                        android:id="@+id/selectGenderDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:dropDownVerticalOffset="@dimen/offset_4dp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_12sp"
                        android:inputType="none"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@color/black"
                        android:paddingHorizontal="@dimen/margin_4dp"
                        android:paddingTop="@dimen/padding_4dp"
                        android:scrollbars="none" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/fragment_register_dob_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_of_birth"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:fontFamily="@font/inter"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/accent_color"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/EditTextInputLayout"
                    android:id="@+id/fragment_edit_calender_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconDrawable="@drawable/ic_calendar"
                    android:layout_marginTop="@dimen/margin_8dp"
                    app:hintTextColor="@color/hint_text_color"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextInput"
                        android:id="@+id/fragment_register_calender_edt"
                        android:layout_width="match_parent"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:cursorVisible="false"
                        android:text=""
                        android:layout_height="@dimen/height_48dp"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:hint="@string/select_date"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fragment_edit_profile_save_btn"
                    style="@style/DefaultButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_48dp"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:text="@string/save"
                    android:enabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/edit_profile_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:indeterminateTint ="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>