<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="83dp"
        app:cardElevation="@dimen/margin_4dp"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:orientation="vertical"
                app:cardCornerRadius="@dimen/radius_50dp"
                app:cardElevation="@dimen/elevation_0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/request_rider_avatar"
                    android:layout_width="@dimen/width_36dp"
                    android:layout_height="@dimen/height_36dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/delivery_status_background"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:text="ongoing"
                android:textColor="#FED600"
                android:textSize="@dimen/text_size_12sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="@dimen/padding_4dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="@+id/cardView" />

            <TextView
                android:id="@+id/rider_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_14sp"
                android:layout_marginStart="@dimen/margin_8dp"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                app:layout_constraintTop_toTopOf="@+id/cardView"
                tools:text="Uche Okoro" />
            <TextView
                android:id="@+id/rider_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintStart_toStartOf="@id/rider_name_tv"
                app:layout_constraintTop_toBottomOf="@id/rider_name_tv"
                tools:text="Ikeja, Lagos" />

            <TextView
                android:id="@+id/rider_phone_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_19dp"
                android:fontFamily="@font/inter"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cardView"
                tools:text="3kg" />

            <TextView
                android:id="@+id/rider_date_joined_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                tools:text="N3,500"
                app:layout_constraintTop_toBottomOf="@id/rider_phone_number_tv"
                app:layout_constraintEnd_toEndOf="@id/rider_phone_number_tv"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/textColor"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>